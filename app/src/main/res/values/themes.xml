<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.HolaMundo" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/azul_marino</item>
        <item name="colorPrimaryVariant">@color/rosa_pastel</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!--
    Los estilos en Android son un compendio de instrucciones
    XML, aplican en el formato siguiente:
    Por cada estilo que desemos aplicar, debemos utilizar
    una etiqueta <item name='nombre_prop_estilo'>_VALOR_</item>

    Los estilos deben indicar un elemento padre
    -->
    <style name="Theme.HolaMundo.BotonCalculadora"  parent="Theme.HolaMundo">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="backgroundTint">@color/fondo_boton_calc</item>
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:layout_marginEnd">4dp</item>
    </style>

    <!-- Estilo para mis campos de texto -->
    <style name="Theme.HolaMundo.MiEditText" parent="Theme.HolaMundo">
        <item name="android:minHeight">48dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <!-- Estilo para nuestro Switch -->
    <style name="Theme.HolaMundo.MiSwitch" parent="Theme.HolaMundo">
        <item name="android:colorControlActivated">@color/rosa_mexicano</item>
    </style>

    <!-- Estilo para RatingBar -->
    <style name="Theme.HolaMundo.MiRatingBar" parent="Theme.HolaMundo">
        <!-- Color cuando la estrella no se llenó-->
        <item name="colorControlNormal">@color/rosa_pastel</item>
        <!-- Color cuando la estrella se llenó -->
        <item name="android:colorControlActivated">@color/rosa_mexicano</item>
    </style>


</resources>